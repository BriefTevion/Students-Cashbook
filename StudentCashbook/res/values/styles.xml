<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Benutzerdefiniertes Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/studentCashbooksBar</item>
    </style>
    
    <!-- Benutzerdefiniertes Action Bar Styling -->
    <style name="studentCashbooksBar" parent="@android:style/Widget.Holo.Light.ActionBar"> 
        <item name="android:background">#04031A</item>
        <item name="android:titleTextStyle">@style/studentCashbooksBarTitleText</item>
    </style>
    
    <!-- Benutzerdefiniertes ActionBar title text Styling -->
    <style name="studentCashbooksBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="Main_button_text" >
    <item name="android:textColor" >#ffffff</item>
    <item name="android:gravity" >center</item>
    <item name="android:textSize" >20sp</item>
    <item name="android:textStyle" >bold</item>
    <item name="android:shadowColor" >#000000</item>
    <item name="android:shadowDx" >1</item>
    <item name="android:shadowDy" >1</item>
    <item name="android:shadowRadius" >2</item>
  </style>
   <style name="trivial_button_text" >
    <item name="android:textColor" >#ffffff</item>
    <item name="android:gravity" >center</item>
    <item name="android:textSize" >10sp</item>
    <item name="android:textStyle" >bold</item>
    <item name="android:shadowColor" >#000000</item>
    <item name="android:shadowDx" >1</item>
    <item name="android:shadowDy" >1</item>
    <item name="android:shadowRadius" >2</item>
  </style>
  <style name="Theme.SettingsBackground" parent="@android:style/Theme.Holo.Light.Dialog"/>
  <style name="Theme.passwortZurueck" parent="@android:style/Theme.Holo.Light.Dialog">
	
</style>

</resources>
