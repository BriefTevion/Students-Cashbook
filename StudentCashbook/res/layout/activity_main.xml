<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    
    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:background="#3C8DC5" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        <Space
                android:id="@+id/Tortendiagramm"
                android:layout_width="400sp"
                android:layout_height="175sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp" />
        
        <Button
            	android:id="@+id/button_Einnahme"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_below="@+id/Tortendiagramm"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="40sp"
                android:background="@drawable/styledbutton2"
                android:text="@string/Einnahme"
                android:textColor="#000000"
                android:gravity="center"
                android:onClick="openEinnahme"
                android:fontFamily="sans-serif-thin"/>

    	<Button
    	    	android:id="@+id/Ausgabe"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/Tortendiagramm"
                android:layout_marginRight="50sp"
                android:layout_marginTop="40sp"
                android:background="@drawable/styledbutton2"
                android:text="@string/Ausgabe"
                android:textColor="#000000"
                android:gravity="center"
                android:onClick="openAusgabe"
                android:fontFamily="sans-serif-thin"/>

    	<TextView
	    	    android:id="@+id/textView_LetzteTrans"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_centerHorizontal="true"
	    	    android:layout_below="@+id/button_Einnahme"
	    	    android:layout_marginTop="25sp"
				android:textAppearance="?android:attr/textAppearanceMedium" 
				android:textColor="#ffffff"
	    	    android:text="@string/LetzteTransaktionen"
	    	    android:fontFamily="sans-serif-thin"
	    	    android:textStyle="bold"/>

    	
    	<ListView 
                android:id="@+id/list"
                android:layout_below="@+id/textView_LetzteTrans"
                android:layout_marginTop="10sp"
                android:layout_height="wrap_content"
        		android:layout_width="match_parent"/>
            
        </RelativeLayout>

    </FrameLayout>
    
    
    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>
</android.support.v4.widget.DrawerLayout>
   


