<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    
    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:background="#84c185" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        <Space
                android:id="@+id/Tortendiagramm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />
        
        <Button
            	android:id="@+id/button_Einnahme"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_below="@+id/Tortendiagramm"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/styledbutton"
                android:drawableTop="@drawable/ic_launcher"
                android:text="@string/Einnahme"
                android:textColor="#f0ffff"
                android:gravity="center"
                android:onClick="openEinnahme"/>

    	<Button
    	    	android:id="@+id/Ausgabe"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/Tortendiagramm"
                android:layout_marginRight="50sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/styledbutton"
                android:drawableTop="@drawable/ic_launcher"
                android:text="@string/Ausgabe"
                android:textColor="#f0ffff"
                android:gravity="center"
                android:onClick="openAusgabe"/>

    	<TextView
	    	    android:id="@+id/textView_LetzteAusgaben"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_alignParentLeft="true"
	    	    android:layout_below="@+id/button_Einnahme"
	    	    android:layout_marginTop="20sp"
				android:layout_marginLeft="15sp"
				android:textAppearance="?android:attr/textAppearanceMedium" 
				android:textColor="#ffffff"
	    	    android:text="@string/LetzteAusgaben"/>

    	<TextView
    	    android:id="@+id/lastTransaktionen"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_below="@+id/textView_LetzteAusgaben"
			android:layout_marginTop="20sp"
			android:layout_centerHorizontal="true"
    	    android:text="-- no data --" 
    	    android:textSize="20sp"/>
            
        </RelativeLayout>

    </FrameLayout>
    
    
    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>
</android.support.v4.widget.DrawerLayout>
   


