<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:background="#84c185" >

        <RelativeLayout
            android:id="@+id/lLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
			
            <EditText  
                android:id="@+id/editText_Name"
                 android:layout_width="300dp"
                 android:layout_height="50dp"
                 android:layout_marginLeft="5dp"
                 android:layout_marginTop="20sp"
                 android:background="#f0ffff"
                 android:ems="10"
                 android:gravity="center"
                 android:layout_alignParentTop="true"
                 android:hint="@string/neuerName"
                 android:layout_centerHorizontal="true"
                 android:fontFamily="sans-serif-thin"
                 android:inputType="text"/>
            
            <EditText  
                android:id="@+id/editText_budget"
                 android:layout_width="300dp"
                 android:layout_height="50dp"
                 android:layout_marginLeft="5dp"
                 android:layout_marginTop="10sp"
                 android:background="#f0ffff"
                 android:layout_below="@+id/editText_Name"
                 android:ems="10"
                 android:gravity="center"
                 android:hint="@string/editText_neuesBudget"
                 android:layout_centerHorizontal="true"
                 android:fontFamily="sans-serif-thin"
                 android:inputType="number"/>
            
            <Button
                android:id="@+id/button_Kategorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:background="@drawable/styledbutton"
                android:drawableLeft="@drawable/ic_launcher"
                android:layout_below="@+id/editText_budget"
                android:text="@string/Kategorie"
                android:textColor="#ffffff"
                                 android:layout_centerHorizontal="true"
                android:fontFamily = "sans-serif-thin"
                android:gravity="center"
                android:onClick="createNewKategorie"/>
            
            <ListView 
                android:id="@+id/list"
                android:layout_below="@+id/button_Kategorie"
                android:layout_marginTop = "20sp"
                android:layout_height="wrap_content"
        		android:layout_width="match_parent">
                
                
            </ListView>
	</RelativeLayout>
	
        
        

    </FrameLayout>
        
    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>
</android.support.v4.widget.DrawerLayout>
   


