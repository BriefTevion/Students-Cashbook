<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#84c185"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NeuerNutzerActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="Tahoma"
        android:text="@string/BenutzerAnlegen"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/neuerBenutzername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="91dp"
        android:fontFamily="Tahoma"
        android:text="@string/Benutzername"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/neuerBenutzernameEingabe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/neuerBenutzername"
        android:layout_below="@+id/neuerBenutzername"
        android:background="@drawable/roundededittext"
        android:ems="10"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/neuesPasswort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/neuerBenutzernameEingabe"
        android:layout_centerVertical="true"
        android:fontFamily="Tahoma"
        android:text="@string/Passwort"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/neuesPasswortEingabe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/neuerBenutzernameEingabe"
        android:layout_below="@+id/neuesPasswort"
        android:background="@drawable/roundededittext"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/anlegen"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/neuesPasswortEingabe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:clickable="true"
        android:onClick="BenutzerNeuAnlegen"
        android:background="@drawable/roundedbutton"
        android:text="@string/Anlegen" />

</RelativeLayout>